{
  "name": "@thm/yvm",
  "version": "1.0.0",
  "description": "Yarn version manager",
  "repository": {
    "type": "git",
    "url": "github:tophat/yvm"
  },
  "main": "yvm.js",
  "scripts": {
    "commit": "npx git-cz",
    "contributors:add": "all-contributors add",
    "contributors:check": "all-contributors check",
    "contributors:generate": "all-contributors generate"
  },
  "jest": {
    "moduleDirectories": [
      "./src",
      "./node_modules"
    ],
    "moduleNameMapper": {
      "raw-loader!": "<rootDir>/test/rawLoaderStub.js"
    },
    "testPathIgnorePatterns": [
      "./artifacts/",
      "./node_modules/"
    ],
    "coverageDirectory": "./artifacts/coverage",
    "setupFilesAfterEnv": [
      "./test/setupTestFramework.js"
    ]
  },
  "author": "Top Hat <opensource@tophat.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^4.0.0",
    "commander": "^5.1.0",
    "core-js": "^3.6.5",
    "cosmiconfig": "^6.0.0",
    "fs-extra": "^9.0.0",
    "kbpgp": "^2.1.15",
    "lodash": "^4.17.13",
    "regenerator-runtime": "^0.13.5",
    "request": "^2.88.2",
    "semver": "^7.3.2",
    "targz": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.0.7",
    "@tophat/eslint-config": "^0.6.1",
    "all-contributors-cli": "^6.15.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-lodash": "^3.3.4",
    "bundlewatch": "^0.2.7",
    "codecov": "^3.7.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-prettier": "^3.1.3",
    "gh-release": "^3.4.0",
    "git-cz": "^4.6.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-junit": "^10.0.0",
    "jest-mock-props": "^1.7.3",
    "lint-staged": "^10.2.8",
    "lodash-webpack-plugin": "^0.11.5",
    "madge": "^3.9.0",
    "marked": "^1.1.0",
    "memfs": "^3.1.3",
    "prettier": "^2.0.5",
    "raw-loader": "^4.0.1",
    "semantic-release": "^17.0.8",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-compiler-plugin": "^1.1.1",
    "webpack-zip-files-plugin": "^1.0.0",
    "yarn-deduplicate": "^2.0.0"
  },
  "lint-staged": {
    "*.js": [
      "node_modules/.bin/eslint"
    ],
    "yarn.lock": [
      "node_modules/.bin/yarn-deduplicate --list --fail"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
