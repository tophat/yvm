{
  "name": "@thm/yvm",
  "version": "1.0.0",
  "description": "Yarn version manager",
  "repository": {
    "type": "git",
    "url": "github:tophat/yvm"
  },
  "main": "yvm.js",
  "scripts": {
    "commit": "npx git-cz",
    "contributors:add": "all-contributors add",
    "contributors:check": "all-contributors check",
    "contributors:generate": "all-contributors generate",
    "postinstall": "yarn-deduplicate"
  },
  "jest": {
    "moduleDirectories": [
      "./src",
      "./node_modules"
    ],
    "moduleNameMapper": {
      "raw-loader!": "<rootDir>/test/rawLoaderStub.js"
    },
    "testPathIgnorePatterns": [
      "./artifacts/",
      "./node_modules/"
    ],
    "coverageDirectory": "./artifacts/coverage",
    "setupFilesAfterEnv": [
      "./test/setupTestFramework.js"
    ]
  },
  "author": "Top Hat <opensource@tophat.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "chalk": "^4.1.1",
    "commander": "^7.2.0",
    "core-js": "^3.11.2",
    "cosmiconfig": "^7.0.0",
    "fs-extra": "^10.0.0",
    "kbpgp": "^2.1.15",
    "lodash": "^4.17.21",
    "regenerator-runtime": "^0.13.7",
    "request": "^2.88.2",
    "semver": "^7.3.5",
    "tar-fs": "^2.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.0",
    "@babel/preset-env": "^7.14.1",
    "@tophat/eslint-config": "^0.7.0",
    "all-contributors-cli": "^6.20.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "babel-plugin-lodash": "^3.3.4",
    "bundlewatch": "^0.3.2",
    "codecov": "^3.8.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.3.1",
    "git-cz": "^4.7.6",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "jest-mock-props": "^1.9.0",
    "lint-staged": "^10.5.4",
    "lodash-webpack-plugin": "^0.11.6",
    "madge": "^4.0.2",
    "marked": "^2.0.1",
    "memfs": "^3.2.2",
    "prettier": "^2.2.1",
    "raw-loader": "^4.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "typescript": "^4.2.3",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.6.0",
    "webpack-compiler-plugin": "^1.1.5",
    "webpack-sources": "^2.2.0",
    "yarn-deduplicate": "^3.1.0",
    "zip-webpack-plugin": "^4.0.1"
  },
  "lint-staged": {
    "*.js": [
      "node_modules/.bin/eslint"
    ],
    "yarn.lock": [
      "node_modules/.bin/yarn-deduplicate --list --fail"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
